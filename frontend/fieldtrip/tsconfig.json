{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["react", "react-native"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@colors": ["styles/colors.ts"],
      "@components": ["shared/components"],
      "@services": ["shared/services"],
      "@hooks": ["shared/hooks"]
    }
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx", "**/*.js", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
